<% if !article.archived? %>
  <div class="article-wrapper-item">
    <div>
      <%= image_tag "https://source.unsplash.com/random/500x260?v=#{article_counter}", size: "500x260", class: "article-image" %>
      <%= link_to article.title, article, class: "article-title" %>
    </div>

    <div class="article-body"><%= article.body %></div>

  </div>
<% end %>
