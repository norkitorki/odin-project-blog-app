<%# if !article.private? %>
  <div class="article-wrapper-item">
    <div class="article-image">
      <%= image_tag "https://source.unsplash.com/random/500x260?v=#{article_counter}", size: "500x260" %>
      <%= link_to article.title, article, class: "article-title" %>
    </div>

    <div class="article-body"><%= article.body %></div>

    <div class="article-tags">
      <% if article.tags.any? %>
        <% article.tags.each do |tag| %>
          <%= link_to tag.name, tag %>
        <% end %>
      <% else %>
        <br>
      <% end %>
    </div>

    <div class="article-footer">
      <p><%= distance_of_time_in_words(article.created_at.to_i, Time.now.utc.to_i) %> ago</p>
      <%= button_to "Read More", article, method: :get, class: "read-more-button" %>
    </div>
  </div>
<%# end %>
